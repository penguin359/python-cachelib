summary: Run upstream unit tests
discover:
  dist-git-source: true
  tests:
    - name: /upstream/unit
      test: |
        cd $TMT_SOURCE_DIR/*/
        useradd -M tester
        chown -R tester: .
        sudo -u tester -- pytest -v -r s -k 'not Uwsgi'
prepare:
  how: install
  package:
    - git-core
    - memcached
    - python3-cachelib
    - python3-pylibmc
    - python3-pytest
    - python3-pytest-xprocess
    - python3-redis
    - redis
execute:
  how: tmt
