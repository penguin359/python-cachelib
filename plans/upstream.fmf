summary: Run upstream unit tests
discover:
  tests:
    - name: /upstream/unit
      test: |
        git clone --depth=1 https://github.com/pallets/cachelib.git
        cd cachelib
        pytest -v -r s -k 'not Uwsgi'
prepare:
  how: install
  package:
    - git-core
    - memcached
    - redis
    - python3-pylibmc
    - python3-pytest
    - python3-pytest-xprocess
    - python3-redis
execute:
  how: tmt
